{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@img/*": ["src/img/*"],
            "@types": ["src/types"],
            "@constants": ["src/constants"],
            "@utils": ["src/utils"]
        },
        "checkJs": true
    },
    "include": ["src/**/*", "index.html"]
}
